<UserControl x:Class="ShopList.AddToShopListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShopList"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TextBlock TextBlock.TextAlignment="Center">Add Item to List</TextBlock>
        <TextBox Name="ItemToAdd" Grid.Row="1"/>
        <Button Name="AddButton" Grid.Row="2">Add</Button>
    </Grid>
</UserControl>
